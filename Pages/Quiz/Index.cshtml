@page
@using QuizCarLicense.Utils
@using QuizCarLicense.Constrains
@model QuizCarLicense.Pages.Quiz.Index
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers


@{
    ViewData["Title"] = "Quiz Page";
    Layout = "_Layout";

    string btncss = "py-2.5 px-5 me-2 mb-2 text-sm font-medium text-gray-900 focus:outline-none bg-white rounded-full border border-gray-200 hover:bg-gray-100 hover:text-blue-700 focus:z-10 focus:ring-4 focus:ring-gray-100 dark:focus:ring-gray-700 dark:bg-gray-800 dark:text-gray-400 dark:border-gray-600 dark:hover:text-white dark:hover:bg-gray-700";

    string inputcss = "bg-gray-50 border border-gray-300 text-gray-900 text-sm rounded-lg focus:ring-blue-500 focus:border-blue-500 block w-full p-2.5 dark:bg-gray-700 dark:border-gray-600 dark:placeholder-gray-400 dark:text-white dark:focus:ring-blue-500 dark:focus:border-blue-500";
    string labelcss = "block mb-2 text-sm font-medium text-gray-900 dark:text-white";

    string btnSm = "px-3 py-2 text-xs font-medium text-center text-black bg-transparent rounded-lg hover:bg-blue-800 hover:text-white focus:ring-4 focus:outline-none focus:ring-blue-300";

    Models.Quiz recent = Model.QuizInput;
    List<Models.Quiz> listQuiz = Model.Quizzes;


    // get viewAsAdmin
    bool viewAsAdmin = User.IsInRole(UserRole.Admin.ToString());
    bool viewAsUser = User.IsInRole(UserRole.User.ToString());

}

<div class="m-4 rounded-lg bg-white p-4 shadow dark:bg-gray-800 ">
    <div class="mb-4 text-xl font-medium leading-none tracking-tight text-gray-700 dark:text-white md:text-2xl">Quiz </div>

    <div class="grid-cols-1 grid w-full gap-5 text-left
text-sm text-gray-500 rtl:text-right dark:text-gray-400
md:grid-cols-3 sm:grid-cols-2">
        @foreach (var q in listQuiz)
        {
            <button onclick="window.location.href ='/Quiz/Detail?id=@q.QuizId&handler=ShowDetails' " class="rounded-lg bg-gray-50 p-5 shadow duration-200 ease-in hover:bg-blue-200">
                <div class="m-3 flex flex-wrap justify-start gap-3">
                    @* <a asp-page="/Quiz/Detail" asp-page-handler="ShowDetails" asp-route-id="@q.QuizId" *@
                    @* class="text-left">@q.Title</a> *@
                    <span class="text-xl font-medium text-blue-800">@q.Title</span>
                    <span class="text-pretty">
                        @q.Detail
                    </span>
                </div>

                <div class="flex justify-end">
                    @if (viewAsAdmin)
                    {
                        <a class="@btnSm" asp-page-handler="ShowDetails" asp-route-id="@q.QuizId">Preview</a>

                    }
                    <a class="@btnSm" href="/test?quizId=@q.QuizId">Test</a>
                </div>
            </button>

        }
    </div>
</div>


@if (User?.Identity?.IsAuthenticated == true)
{

    // your quiz
    <div class="m-4 rounded-lg bg-white p-4 shadow dark:bg-gray-800 ">
        <div class="mb-4 text-xl font-medium leading-none tracking-tight text-gray-700 dark:text-white md:text-2xl">Your Quiz</div>

        @if (Model.YourQuizzes.Count != 0)
        {
            <div class="grid-cols-1 grid w-full gap-5 text-left
                                    text-sm text-gray-500 rtl:text-right dark:text-gray-400
                                    md:grid-cols-3 sm:grid-cols-2">

                @foreach (var q in Model.YourQuizzes)
                {
                    <div class="rounded-lg bg-gray-50 p-5 shadow duration-200 ease-in hover:bg-blue-200">
                        <div class="m-3 flex flex-wrap justify-start gap-3"
                             onclick="window.location.href='/Quiz/Detail?id=@q.QuizId&handler=ShowDetails'"
                             style="cursor: pointer;">
                            <span class="text-xl font-medium text-blue-800">@q.Title</span>
                            <span class="text-pretty">
                                @q.Detail
                            </span>
                        </div>
                        <div class="flex justify-end gap-2 items-center">
                            <a class="@btnSm" href="/test?quizId=@q.QuizId" onclick="event.stopPropagation();">Test</a>
                            @if (viewAsAdmin || viewAsUser)
                            {
                                <div class="relative inline-block">
                                    <button id="dropdownMenuIconButton-@q.QuizId"
                                            data-dropdown-toggle="dropdownDots-@q.QuizId"
                                            class="@btnSm"
                                            type="button"
                                            onclick="event.stopPropagation();">
                                        <svg class="w-2 h-2" aria-hidden="true" xmlns="http://www.w3.org/2000/svg" fill="currentColor" viewBox="0 0 4 15">
                                            <path d="M3.5 1.5a1.5 1.5 0 1 1-3 0 1.5 1.5 0 0 1 3 0Zm0 6.041a1.5 1.5 0 1 1-3 0 1.5 1.5 0 0 1 3 0Zm0 5.959a1.5 1.5 0 1 1-3 0 1.5 1.5 0 0 1 3 0Z" />
                                        </svg>
                                    </button>
                                    <!-- Dropdown menu -->
                                    <div id="dropdownDots-@q.QuizId" class="hidden z-10 bg-white divide-y divide-gray-100 rounded-lg shadow w-44 dark:bg-gray-700 dark:divide-gray-600">
                                        @{
                                            string liCss = "block px-4 py-2 hover:bg-gray-100 dark:hover:bg-gray-600 dark:hover:text-white";
                                        }
                                        <ul class="py-2 text-sm text-gray-700 dark:text-gray-200" aria-labelledby="dropdownMenuIconButton-@q.QuizId">
                                            <li>
                                                <a class="@liCss" asp-page-handler="ShowDetails" asp-route-id="@q.QuizId" onclick="event.stopPropagation();">Update</a>
                                            </li>
                                        </ul>
                                        <div class="py-2">
                                            <a asp-page-handler="Delete"
                                               asp-route-id="@q.QuizId"
                                               onclick="return confirm('are you sure?')"
                                               class="@liCss text-red-500" onclick="event.stopPropagation();">Remove</a>
                                        </div>
                                    </div>
                                </div>
                            }
                        </div>
                    </div>
                }
            </div>
        }
        else
        {
            <div class="text-gray-500 text-sm ">
                You have not created any quiz yet.
            </div>
        }
    </div>
}

@if (viewAsAdmin || viewAsUser)
{

    <div class="fle mx-4  md:w-1/2 flex-wrap justify-center rounded-lg bg-white p-4 shadow dark:bg-gray-800">
        @if(recent.QuizId > 0){
        <div class="mb-4 text-xl font-medium leading-none tracking-tight text-gray-700 dark:text-white md:text-2xl">Update Quiz</div>
        <div>
           or
          <a asp-page="Index">Add New</a>
        </div>
        }else{
        <div class="mb-4 text-xl font-medium leading-none tracking-tight text-gray-700 dark:text-white md:text-2xl">New Quiz Collection</div>
        }
        <form method="post" class="w-full">
            <div class="">
                <lable class="@labelcss">Title</lable>
                <input name="QuizInput.Title" value="@recent.Title" type="text" class="@inputcss" /><br />
                <span asp-validation-for="QuizInput.Title" class="mt-2 text-sm text-red-600 dark:text-red-500"></span>
            </div>

            <div class="mb-3">
                <lable class="@labelcss">Details</lable>
                <textarea name="QuizInput.Detail" type="text" class="@inputcss">@recent.Detail</textarea>
            </div>

            <div class="flex">
                @if(recent.QuizId > 0){
                <input type="submit" name="btnUpdate" class="@btncss" value="Update" asp-page-handler="Update" />
                }else{
                <input type="submit" name="btnInsert" class="@btncss" value="Insert" asp-page-handler="Insert" />
                }

                <!--<a asp-page-handler="Delete" asp-route-id="@recent.QuizId"
                   onclick="return confirm('are you sure?')"
                   class="@btncss">
                    <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="lucide lucide-trash-2"><path d="M3 6h18" /><path d="M19 6v14c0 1-1 2-2 2H7c-1 0-2-1-2-2V6" /><path d="M8 6V4c0-1 1-2 2-2h4c1 0 2 1 2 2v2" /><line x1="10" x2="10" y1="11" y2="17" /><line x1="14" x2="14" y1="11" y2="17" /></svg>
                </a>-->
            </div>
            @* hidden *@
            <input name="QuizInput.QuizId" value="@recent.QuizId" type="hidden" /><br />
        </form>
    </div>
}
